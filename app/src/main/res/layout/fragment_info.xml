<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="gr.uom.agelogeo.androidproject.InfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Project for Android Developement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp" />

            <TextView
                android:text="Giorgos Angelopoulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/developername"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27dp"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="GitHub : agelogeo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/developername"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp"
                android:id="@+id/github"
                android:textStyle="normal|bold|italic"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="100dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView5"
                android:scaleType="fitXY"
                android:layout_height="100dp"
                android:layout_marginTop="32dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="30sp"
                android:layout_marginTop="139dp"
                android:layout_alignTop="@+id/imageView5"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
